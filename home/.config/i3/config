## Appearance

# Font for window titles. Will also be used by the bar unless a different font
# is used in the bar {} block below.
font pango:NovaMono 10

default_border pixel
default_floating_border pixel
hide_edge_borders smart

gaps inner 16
smart_gaps on

# Load visual customizations
exec_always --no-startup-id xrdb ~/.Xresources
exec_always --no-startup-id wal -Rqst

# Set colors from Xresources - generated by wal
# The values to the right are not comments, they are fallbacks.
set_from_resource $color0   i3wm.color0     #000000
set_from_resource $color1   i3wm.color1     #111111
set_from_resource $color2   i3wm.color2     #222222
set_from_resource $color3   i3wm.color3     #333333
set_from_resource $color4   i3wm.color4     #444444
set_from_resource $color5   i3wm.color5     #555555
set_from_resource $color6   i3wm.color6     #666666
set_from_resource $color7   i3wm.color7     #777777
set_from_resource $color8   i3wm.color8     #888888
set_from_resource $color9   i3wm.color9     #999999
set_from_resource $color10  i3wm.color10    #aaaaaa
set_from_resource $color11  i3wm.color11    #bbbbbb
set_from_resource $color12  i3wm.color12    #cccccc
set_from_resource $color13  i3wm.color13    #dddddd
set_from_resource $color14  i3wm.color14    #eeeeee
set_from_resource $color15  i3wm.color15    #ffffff

# class                 border  background  text    indicator   child_border
client.focused          $color7 $color0     $color7 $color7     $color7
client.focused_inactive $color6 $color0     $color7 $color2     $color6
client.unfocused        $color2 $color0     $color7 $color2     $color2
client.urgent           $color1 $color0     $color7 $color1     $color1
client.placeholder      $color2 $color0     $color7 $color2     $color2

client.background       $color0

# Start i3bar to display a workspace bar
bar {
    status_command i3blocks -c ~/.config/i3blocks/config
    colors {
        background  $color2
        statusline  $color7
        separator   $color6
        #                  border  backgr. text
        urgent_workspace   $color5 $color5 $color7
        focused_workspace  $color6 $color6 $color7
        active_workspace   $color3 $color3 $color7
        inactive_workspace $color2 $color2 $color7
    }
    strip_workspace_numbers yes
}




## Behavior

# Define names for default workspaces for which we configure key bindings later on.
# We use variables to avoid repeating the names in multiple places.
set $ws_term "11:term"
set $ws_web  "12:web"
set $ws_temp "13:temp"
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

# application behavior
focus_on_window_activation focus
for_window [window_role="GtkFileChooserDialog"] fullscreen enable

# startup applications
exec --no-startup-id i3-msg "workspace $ws_term; exec i3-sensible-terminal"
exec --no-startup-id i3-msg "workspace $ws_web; exec firefox"
workspace $ws1




## Keybindings

set $mod Mod4
set $mod_manip Shift

# Use pactl to adjust volume in PulseAudio.
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +10%
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -10%
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle
bindsym XF86AudioMicMute exec --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ toggle

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# start a terminal
bindsym $mod+Return exec i3-sensible-terminal

# kill focused window
bindsym $mod+$mod_manip+q kill

# start dmenu (a program launcher)
bindsym $mod+d exec --no-startup-id i3-dmenu-desktop --dmenu="dmenu -i -fn NovaMono -b -nb $color2 -nf $color7 -sb $color6 -sf $color0"

# take a screenshot
bindsym Print --release exec scrot -s -o ${HOME}/temp/screenshot.png -e "xclip -sel clip -t image/png < \$f"

# change focus
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# move focused window
bindsym $mod+$mod_manip+Left  move left
bindsym $mod+$mod_manip+Down  move down
bindsym $mod+$mod_manip+Up    move up
bindsym $mod+$mod_manip+Right move right

# split in horizontal orientation
bindsym $mod+h split h

# split in vertical orientation
bindsym $mod+v split v

# toggle fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# resize window
bindsym $mod+KP_Left          resize grow   left  10 px or 10 ppt
bindsym $mod+$mod_manip+KP_4  resize shrink left  10 px or 10 ppt
bindsym $mod+KP_Right         resize grow   right 10 px or 10 ppt
bindsym $mod+$mod_manip+KP_6  resize shrink right 10 px or 10 ppt
bindsym $mod+KP_Up            resize grow   up    10 px or 10 ppt
bindsym $mod+$mod_manip+KP_8  resize shrink up    10 px or 10 ppt
bindsym $mod+KP_Down          resize grow   down  10 px or 10 ppt
bindsym $mod+$mod_manip+KP_2  resize shrink down  10 px or 10 ppt

# change container layout (tabbed, toggle split)
bindsym $mod+t layout tabbed
bindsym $mod+s layout toggle split

# toggle tiling / floating
bindsym $mod+$mod_manip+space floating toggle

# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# focus the parent container
bindsym $mod+bracketleft focus parent

# focus the child container
bindsym $mod+bracketright focus child

# switch to workspace
bindsym $mod+comma  workspace $ws_term
bindsym $mod+period workspace $ws_web
bindsym $mod+slash  workspace $ws_temp
bindsym $mod+1      workspace $ws1
bindsym $mod+2      workspace $ws2
bindsym $mod+3      workspace $ws3
bindsym $mod+4      workspace $ws4
bindsym $mod+5      workspace $ws5
bindsym $mod+6      workspace $ws6
bindsym $mod+7      workspace $ws7
bindsym $mod+8      workspace $ws8
bindsym $mod+9      workspace $ws9
bindsym $mod+0      workspace $ws10

# move focused container to workspace
bindsym $mod+$mod_manip+comma   move container to workspace $ws_term; workspace $ws_term
bindsym $mod+$mod_manip+period  move container to workspace $ws_web;  workspace $ws_web
bindsym $mod+$mod_manip+slash   move container to workspace $ws_temp; workspace $ws_temp
bindsym $mod+$mod_manip+1       move container to workspace $ws1;     workspace $ws1
bindsym $mod+$mod_manip+2       move container to workspace $ws2;     workspace $ws2
bindsym $mod+$mod_manip+3       move container to workspace $ws3;     workspace $ws3
bindsym $mod+$mod_manip+4       move container to workspace $ws4;     workspace $ws4
bindsym $mod+$mod_manip+5       move container to workspace $ws5;     workspace $ws5
bindsym $mod+$mod_manip+6       move container to workspace $ws6;     workspace $ws6
bindsym $mod+$mod_manip+7       move container to workspace $ws7;     workspace $ws7
bindsym $mod+$mod_manip+8       move container to workspace $ws8;     workspace $ws8
bindsym $mod+$mod_manip+9       move container to workspace $ws9;     workspace $ws9
bindsym $mod+$mod_manip+0       move container to workspace $ws10;    workspace $ws10

# reload the configuration file
bindsym $mod+$mod_manip+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+$mod_manip+r restart
# exit i3 (logs you out of your X session)
bindsym $mod+$mod_manip+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -B 'Yes, exit i3' 'i3-msg exit'"
